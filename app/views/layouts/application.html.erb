<!DOCTYPE html>
<html>
  <head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
    <title>TodoRails</title>
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
  </head>
  <body>
    <div class = "container">
      <p class="bg-success"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <div class = "row"> 
      <div class="col-sm-4"><%= link_to "Back to Home", root_path %></div>
      <% if current_user %>
        <div class="col-sm-2"><%= current_user.email %></div>
        <div class="col-sm-4"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></div>
        <!-- <%= button_to "Sign Out", destroy_user_session_path, method: :delete %> -->
      <% else %>
        <div class="col-sm-4"><%= link_to "Sign in", new_user_session_path %></div>
      <% end %>
    </div>
    </div>

  <%= yield %>

  </body>
</html>
